{# Displays a given error message to the user #}

{% extends "base.jinja" %}
{% block head %}
<style>
#priviblur-error {
    color: var(--color-text);
    text-align: center;
}
</style>

{% endblock %}
{% block title %}{{translate(request.ctx.language, "priviblur_error_page_title")}}{% endblock %}

{% block center %}
<section id="priviblur-error">
    <div>
        <h1 aria-label="Error explanation heading">{{error_heading}}</h1>
        <p aria-label="Error explanation">{{error_description}}</h1>
    </div>
</section>
{%- endblock %}