{% extends "base.jinja" %}
{% block title %}Trending Topics - Priviblur{% endblock %}
{% block content %}
    {% include 'components/timeline.jinja' %}

    {%- if timeline.next %}
        <div class="paging">
            <a class="next-page button" href="{{request.path}}?continuation={{timeline.next.cursor | urlencode}}#m">
                {{translate("en", "pagination_next_page")}}
            </a>
        </div>
    {% endif %}

{%- endblock %}
